# ios/Podfile

# Necessário para o react-native-firebase
$RNFirebaseAsStaticFramework = true

require_relative '../node_modules/react-native/scripts/react_native_pods'

# Defina a versão mínima globalmente para 13.0, conforme exigido pelo Firebase
platform :ios, '13.0'
prepare_react_native_project!

target 'TempGlicoTrack' do # Mantendo o nome atual do target
  config = use_native_modules!
  
  # Diretiva obrigatória para o Firebase
  use_frameworks! :linkage => :static

  use_react_native!(
    :path => config[:reactNativePath],
    # Ative o Flipper no Debug ou desative-o se não usar
    # :flipper_configuration => FlipperConfiguration.enabled(["Debug"]),
    # Se Flipper for incompatível com use_frameworks!, desative-o:
    :flipper_configuration => FlipperConfiguration.disabled
  )

  post_install do |installer|
    react_native_post_install(installer)
    # A linha __apply_Xcode_12_5_M1_post_install_workaround(installer) pode ser necessária
    # para Macs M1 mais antigos, mas geralmente não é mais preciso.
  end
end